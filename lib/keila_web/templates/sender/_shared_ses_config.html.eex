<div class="flex flex-col">
    <%= if input_value(@form, :shared_ses_verified_at) do %>
        <p class="flex gap-2 items-center">
            <span class="text-green-500 inline-flex h-5 w-5 flex-shrink-0">
                <%= render_icon(:check_circle) %>
            </span>
            <%= gettext("You have verified your email address and can now send emails with this sender.") %>
        </p>
    <% else %>
        <p class="flex gap-2 items-center">
            <span class="text-yellow-500 inline-flex h-5 w-5 flex-shrink-0">
                <%= render_icon(:information_circle) %>
            </span>
            <%= gettext("You need to verify your email address before you can send emails with this sender.") %>
        </p>
    <% end %>
</div>
